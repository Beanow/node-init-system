{
  "name": "init-system",
  "version": "0.1.0",
  "description": "Declarative startup/shutdown for your Node.js apps.",
  "author": "Robin van Boven (https://github.com/Beanow)",
  "license": "MIT",
  "keywords": [
    "init",
    "systemd",
    "init.d",
    "bootstrap",
    "startup",
    "shutdown",
    "async",
    "middleware",
    "dependency"
  ],
  "scripts": {
    "dev": "node-dev --respawn src/index.js",
    "lint": "eslint src test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "nyc --include src mocha --ui bdd --reporter list --check-leaks --full-trace test/**.test.js",
    "test:coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "fantasy-states": "^0.2.1",
    "fluture": "^7.2.2",
    "momi": "^0.7.0",
    "tcomb": "^3.2.24"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-config-warp": "^2.1.0",
    "mocha": "^4.0.1",
    "node-dev": "^3.1.3",
    "nyc": "^11.3.0"
  }
}
